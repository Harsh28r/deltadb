            "body": {
              "mode": "raw",
              "raw": "{\n  \"newStatus\": \"{{NEW_STATUS_ID}}\",\n  \"newData\": {\n    \"notes\": \"Status updated\"\n  }\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/leads/{{LEAD_ID}}/status",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "leads", "{{LEAD_ID}}", "status"]
            }
          },
          "response": []
        },
