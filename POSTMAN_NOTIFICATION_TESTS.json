            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{TARGET_USER_ID}}\",\n  \"projectId\": \"{{PROJECT_ID}}\",\n  \"leadSourceId\": \"{{LEAD_SOURCE_ID}}\",\n  \"customData\": {\n    \"name\": \"John Doe\",\n    \"phone\": \"9876543210\",\n    \"email\": \"john@example.com\"\n  }\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/leads",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "leads"]
            }
          },
          "response": []
        },
        {
          "name": "Change Lead Status (Notifies Lead Owner + Project)",
