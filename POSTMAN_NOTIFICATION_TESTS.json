  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"superadmin@deltayards.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/superadmin/admin-login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "superadmin", "admin-login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Notification Endpoints",
      "item": [
        {
          "name": "Get User Notifications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/notifications/{{USER_ID}}?page=1&limit=20",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notifications", "{{USER_ID}}"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "type",
                  "value": "in-app",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "sent",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Mark Notification as Read",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/notifications/{{NOTIFICATION_ID}}/read",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notifications", "{{NOTIFICATION_ID}}", "read"]
            }
          },
          "response": []
        },
        {
          "name": "Bulk Update Notifications",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": {\n    \"user\": \"{{USER_ID}}\",\n    \"status\": \"sent\"\n  },\n  \"update\": {\n    \"status\": \"read\"\n  }\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/notifications/bulk-update",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notifications", "bulk-update"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Lead Operations (with Notifications)",
      "item": [
        {
