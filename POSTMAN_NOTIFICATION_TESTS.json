            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromUser\": \"{{FROM_USER_ID}}\",\n  \"toUser\": \"{{TO_USER_ID}}\",\n  \"leadIds\": [\n    \"{{LEAD_ID_1}}\",\n    \"{{LEAD_ID_2}}\"\n  ],\n  \"projectId\": \"{{PROJECT_ID}}\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/leads/bulk-transfer",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "leads", "bulk-transfer"]
